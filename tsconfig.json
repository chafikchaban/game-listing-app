{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["ES6"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "isolatedModules": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "strict": true,
    "types": [
      "react-native",
      "node"
    ]
  },
  "exclude": [
    "./node_modules",
    "./babel.config.js",
    "./jest.config.js",
    "./metro.config.js"
  ]
}
